border-after-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0px
    bottom 0px
    width 100%
    border-top 1px solid $color
    content ' '
border-before-1px($color)
  position relative
  &:before
    display block
    position absolute
    left 0px
    top 0px
    width 100%
    border-top 1px solid $color
    content ' '
fontSize($size)
  font-size ($size )
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    font-size ($size + 2 )


bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image url($url + "@3x.png")
