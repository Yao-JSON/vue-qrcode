.person
  position fixed
  z-index 100
  top 40px
  width 100%
  bottom 0
  box-sizing border-box
  background-color #2c3130
  transform translate3d(0,0,0)
  &.fold-enter-active,&.fold-leave-active
    transition all .4s
  &.fold-enter, &.fold-leave-active
    transform translate3d(0,100%,0)
  .content-wrapper
    position absolute
    top 73px
    bottom 0px
    width 100%
    box-sizing border-box
    padding 0 22px 107px 22px
    &.has-back
      top 113px
    .content
      width 100%
      height 100%
      box-sizing border-box
      background-color #fff
      border-radius 10px
      box-shadow 0 0 20px #fff
      padding 50px 50px 0 50px
      .con-header
        .img-wrapper
          display inline-block
          img
            width 60px
            height 60px
            border-radius 4px
            border 1px solid #e0e0e0
        .info
          display inline-block
          vertical-align top
          margin-left 18px
          font-size 0
          .name
            font-size 16px
            font-weight 700
            color #333
            line-height 30px
          .phone
            font-size 10px
            color #bfbfbf
            line-height 30px

      .qrcode-wrapper
        box-sizing border-box
        img
          width 100%
        .text
          font-size 10px
          text-align center
          color #b8b8b8
